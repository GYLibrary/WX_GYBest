<form bindsubmit="formSubmit" bindreset="formRest">
    <view class="section">
        <input placeholder="请输入您的名字" name="username" />
    </view>
    <view class="section">
        <input placeholder="请输入您的密码" password name="paswd" />
    </view>
    <view class="btn-area">
        <button form-type="submit">登录</button>
        <button form-type="reset">重置</button>
    </view>
    <view class="reg">
         <navigator url="../register/register" hover-class="other-navigator-hover">如无账号,请先注册        </navigator>
    </view>

</form>